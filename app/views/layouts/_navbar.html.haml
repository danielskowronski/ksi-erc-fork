#navbar.navbar.navbar-default
  .container
    .container-fluid
      .navbar-brand
        = link_to image_tag('https://www.ksi.ii.uj.edu.pl/images/sticker.png', height: '24px')+"KSI ERC", root_path
      %ul.nav.navbar-nav
        - if current_user
          %li
            = link_to "Członkowie", members_path
          %li
            = link_to "Def. ról", roles_path
          %li
            = link_to "Def. składek", periods_path
          %li
            = link_to "Def. koszulek", tshirt_definitions_path
          %li
            = link_to "Zapisy do koła", memberships_path
          %li
            = link_to "Wydawanie koszulek", tshirt_issues_path
          %li
            = link_to "Nieużywane", unused_path
        - else
          %li
            = link_to 'Księgozbiór', ksiegozbior_path
          %li
            = link_to 'Zaloguj (zarzont)', login_path
      - if current_user
        %ul.nav.navbar-nav.pull-right
          %li.navbar-text
            = current_user.email
          %li
            = link_to 'Wyloguj', logout_path, method: :delete
